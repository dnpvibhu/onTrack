<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:viz="sap.viz.ui5.controls"
	displayBlock="true" xmlns:c="sap.suite.ui.microchart" xmlns:suite="sap.suite.ui.commons" xmlns:core="sap.ui.core">
	<Dialog title="Truck {/truckDetailModel/markerDet/truckDet/VEH_ID}" contentWidth="37rem" xmlns:html="http://www.w3.org/1999/xhtml">
		<content>
			<VBox class="sapUiSmallMargin">
				<f:SimpleForm editable="false" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
					emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2" singleContainerFullSize="false">
					<f:content>
						<core:Title text="Delivering To"/>
						<Label text="Order number"/>
						<Text text="{/truckDetailModel/markerDet/SHNUMBER}"/>
						<Label text="Customer"/>
						<Text text="{/truckDetailModel/markerDet/NAME1}"/>
						<Label text="Delivery at"/>
						<Text text="{/truckDetailModel/markerDet/CITY1}"/>
						<Label text="Delivery Quantity"/>
						<Text text="{/truckDetailModel/markerDet/LFIMG}"/>
						<Label text="Product"/>
						<Text text="{/truckDetailModel/markerDet/MATNR}"/>
						<Label text="Status"/>
						<Text text="{/truckStatus}"/>
					</f:content>
				</f:SimpleForm>
				<HBox alignContent="Center" alignItems="Center" justifyContent="Center" fitContainer="true">
					<Button width="6rem" class="sapUiMediumMarginBegin" press="onOkPress" text="OK" type="Default"></Button>
				</HBox>
			</VBox>
		</content>
		<!--<footer>-->
		<!--	<Toolbar>-->
		<!--		<ToolbarSpacer/>-->
		<!--		<Button text="SignOut" press="onFinalSignOut"/>-->
		<!--	</Toolbar>-->
		<!--</footer>-->
	</Dialog>
</core:FragmentDefinition>